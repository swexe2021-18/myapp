<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<%= search_form_for @q do |e| %>
      <%= e.label :area, "エリア検索" %>
      <%= e.search_field :area_cont %>
      <%= submit_tag("検索") %>
      &emsp;
      <%= e.label :genre, "ジャンル検索" %>
      <%= e.search_field :genre_cont %>
      <%= submit_tag("検索") %>
    <% end %>
<% @restaurants.each do |e| %>
  <p>
    <%= e.shop %>
    <%= link_to '表示', restaurant_path(e) %>
    <% if current_user %>
    <%= link_to '編集', edit_restaurant_path(e) %>
      <%= link_to '削除', restaurant_path(e), method: :delete %>
      <% if e.likes.count > 0 %>
        <%= link_to '♥', like_path(e), method: :delete %>
      <% else %>
        <%= link_to '♡', likes_path(restaurant_id: e.id), method: :post %>
      <% end %>
    <% end %>
    </p>
<% end %>

<p> 
<% if current_user %>
  <%= link_to '投稿する', new_restaurant_path %>
<% end %>
</p>

<p>
<% if current_user %>
  <%= link_to 'ログアウト', top_logout_path %>
<% else %>
  <%= link_to 'ログイン', top_main_path %>
<% end %>
</p>

<p>
  <%= link_to 'ユーザ一覧', users_path %>
</p>
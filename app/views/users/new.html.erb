<div class = "center">
<%= form_for @user, url: {action: :create} do |f| %>
  <%= f.label :uid, 'ユーザーID' %> 
  <%= f.text_field :uid %> 
  <br>
  <br>
  <%= f.label :password, 'パスワード' %> 
  <%= f.password_field :pass %> 
  <br>
  <br>
  <%= f.label :password_confirmation, 'パスワード(確認)' %> 
  <%= f.password_field :password %>
  <br>
  <br>
  <%= f.submit '登録', class:"btn btn-primary btn-sm" %>
<% end %>
</div>